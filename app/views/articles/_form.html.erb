<section class="flex flex-col m-20 px-10 border-2 border-gray-200 items-center justify-center rounded-lg">
<div class="mb-10 w-full">

<%= form_with(model: article, class:"flex flex-col w-full") do |form| %>
  <% if article.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(article.errors.count, "error") %> prohibited this article from being saved:</h2>

      <ul>
        <% article.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %><br>

  <div>
    <%= form.label :headline, class:"label-form" %>
    <%= form.text_field :headline, class:"field-form" %>
  </div>

  <div>
    <%= form.label :lead, class:"label-form" %>
    <%= form.text_field :lead, class:"field-form" %>
  </div>

  <div>
    <%= form.label :body, class:"label-form" %>
    <%= form.text_area :body, class:"field-form" %>
  </div>

  <%= form.file_field :image, class: "label-form" %>

  <div>
    <%= form.submit class:"btn-primary bg-green-800" %>
  </div>
<% end %>
</div>
</section>